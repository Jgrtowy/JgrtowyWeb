---
import Header from "../components/header.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Contact me">
     <Header />
     <div class="flex justify-center items-center flex-col gap-5 w-screen">
          <h1 class="text-4xl">📝 Contact me 📝</h1>
          <div class="flex gap-3 justify-center">
               <a href="https://discord.com/users/304961013202288651"
                    ><img src="https://skillicons.dev/icons?i=discord" /></a
               >
               <a href="https://twitter.com/jgrtowy"
                    ><img src="https://skillicons.dev/icons?i=twitter" /></a
               >
               <a href="https://github.com/jgrtowy"
                    ><img src="https://skillicons.dev/icons?i=github" /></a
               >
          </div>
          <h1 class="text-3xl">✉️ Send me an e-mail ✉️</h1>
          <h2 class="text-3xl">
               <a
                    href="mailto:contact@jgrtowy.xyz"
                    class="underline dark:hover:text-gray-300 transition hover:text-gray-800"
                    >contact@jgrtowy.xyz</a
               >
          </h2>
     </div>
</Layout>

<style scoped>
     img {
          width: 4rem;
          aspect-ratio: 1/1;
          filter: brightness(0.8);
          transition-duration: 0.2s;
     }
     img:hover {
          filter: brightness(1);
     }
</style>
