---
import Header from '../components/header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Contact me'>
    <Header />
    <div class='flex justify-center items-center flex-col gap-5 w-screen'>
        <h1 class='text-4xl' id='header-text'>📝 Interested? Contact me here 📝</h1>
        <div class='flex justify-center flex-col gap-5'>
            <div class='flex items-center justify-between gap-6 text-2xl'>
                <img src='https://skillicons.dev/icons?i=discord' />
                <h1>Jgrtowy#0001</h1>
            </div>
            <div class='flex items-center justify-between text-2xl'>
                <img src='https://skillicons.dev/icons?i=twitter' />
                <h1>@Jgrtowy</h1>
            </div>
            <div class='flex items-center justify-between text-2xl'>
                <img src='https://skillicons.dev/icons?i=github' />
                <h1>/Jgrtowy</h1>
            </div>
        </div>
        <h1 class='text-3xl'>✉️ Send me an e-mail ✉️</h1>
        <h2 class='text-3xl'>
            <a href='mailto:contact@jgrtowy.xyz' class='underline dark:hover:text-gray-300 transition hover:text-gray-800'>contact@jgrtowy.xyz</a>
        </h2>
    </div>
</Layout>

<style scoped>
    @media (max-width: 768px) {
        #header-text {
            font-size: 1.4rem;
        }
    }
    img {
        width: 4rem;
        aspect-ratio: 1/1;
    }
</style>
