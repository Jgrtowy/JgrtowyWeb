---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/header.astro';
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/png' href='/favicon.png' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <Header transition:persist />
        <slot />

        <style scoped lang='postcss'>
    @font-face {
        font-family: 'Varela Round';
        src: url('/fonts/VarelaRound-Regular.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Varela Round', 'Helvetica', sans-serif;
    }

    :root {
        --bg-primary-dark: #38705e;
        --bg-secondary-dark: #0d0d26;
        --bg-primary-light: #ff3eb7;
        --bg-secondary-light: #4dcc8e;
    }
    @media (prefers-color-scheme: dark) {
        html {
            background: var(--bg-primary-dark) 0%;
            background: radial-gradient(circle, var(--bg-primary-dark) 0%, var(--bg-secondary-dark) 100%);
            color: #fff;
            text-shadow: 0.2rem 0.2rem 0.5rem #000;
        }
    }
    @media (prefers-color-scheme: light) {
        html {
            background: var(--bg-primary-light) 0%;
            background: radial-gradient(circle, var(--bg-primary-light) 0%, var(--bg-secondary-light) 100%);
            color: #000;
        }
    }
    html {
        background-size: 600%;
        width: 100%;
        height: 100vh;
        animation: bg 60s linear infinite;
    }

    @keyframes bg {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>
    </body>
</html>
