---
import { DarkModeToggle } from './DarkModeToggle';
import { Button, buttonVariants } from './ui/button';
---

<header class='flex justify-between py-5 px-24 text-2xl'>
    <div class='flex w-12 items-center gap-6'>
        <a class={`${buttonVariants({ variant: 'ghost' })} text-xl`} href='/'>Home</a>
        <a class={`${buttonVariants({ variant: 'ghost' })} text-xl`} href='/about'>About</a>
        <a class={`${buttonVariants({ variant: 'ghost' })} text-xl`} href='/projects'>Projects</a>
        <a class={`${buttonVariants({ variant: 'ghost' })} text-xl`} href='/contact'>Contact</a>
    </div>
    <div class='flex gap-6'>
        <DarkModeToggle client:load />
    </div>
</header>
<style scoped>
    @media (max-width: 768px) {
        header {
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 1rem;
            padding: 1rem;
        }
        header > div:first-child {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        header > div:last-child {
            flex-direction: row;
            gap: 1rem;
        }
    }
</style>
